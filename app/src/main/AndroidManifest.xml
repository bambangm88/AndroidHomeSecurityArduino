<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bamaproject.androidhomesecurityarduino">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceList"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".scanControl"
            android:label="LED Control"></activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"></activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".petunjuk"></activity>
        <activity android:name=".tentang"></activity>
        <activity android:name=".Security.activities.LoginActivity"></activity>
        <activity android:name=".Security.activities.RegisterActivity"></activity>
        <activity android:name=".pengaturan"></activity>
    </application>

</manifest>