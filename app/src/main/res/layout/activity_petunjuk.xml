<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".petunjuk">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarPesan"
                app:title="Petunjuk Aplikasi"
                app:titleTextColor="@color/orangeMuda"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="#fff"
                app:elevation="4dp"
                app:popupTheme="@style/Base.Theme.AppCompat.Light.DarkActionBar" >

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>


        <TextView
            android:id="@+id/satu"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#454545"
            android:textStyle="bold"
            android:text="PETUNJUK PENGGUNAAN APLIKASI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dua"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="170dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#454545"
            android:text="1. Register Untuk Mendaftar Akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_below="@+id/dua"
            android:id="@+id/tiga"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#454545"
            android:text="2. Login Untuk Masuk Ke Halaman Utama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/tiga"
            android:layout_marginTop="10dp"
            android:id="@+id/empat"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#454545"
            android:text="3. Masuk Halaman Utama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_below="@+id/empat"
            android:layout_marginTop="10dp"
            android:id="@+id/lima"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#454545"
            android:text="4. Menu Doorlock Untuk Scan Qr-Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_below="@+id/lima"
            android:layout_marginTop="10dp"
            android:id="@+id/enam"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#454545"
            android:text="5. Menu Petunjuk Untuk Melihat Petunjuk Penggunaan Aplikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_below="@+id/enam"
            android:layout_marginTop="10dp"
            android:id="@+id/tujuh"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#454545"
            android:text="6. Menu Tentang Untuk Menampilkan Informasi Aplikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/tujuh"
            android:layout_marginTop="10dp"
            android:id="@+id/delapan"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#454545"
            android:text="7. Menu Pengaturan Untuk Mengubah Password User"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </RelativeLayout>
</ScrollView>